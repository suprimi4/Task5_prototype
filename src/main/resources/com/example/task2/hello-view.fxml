<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="372.0" prefWidth="663.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Canvas fx:id="can" height="403.0" onMouseClicked="#onClick" width="626.0" />
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <children>
            <ColorPicker fx:id="colorPic" />

            <Label fx:id="welcomeText" text="Choose:">
                <font>
                    <Font size="19.0" />
                </font>
            </Label>
            <ListView fx:id="listik" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="btn" onAction="#addPicker" text="Очистить" />
        </children>
    </HBox>
</VBox>
